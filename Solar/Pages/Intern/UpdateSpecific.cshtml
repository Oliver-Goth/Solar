    <section class="project-outer-container">
        <div class="project-main-container">
            <div class="full-size project-header">
                <div class="header-grid">
                    <p class="project-case-text">Sag:</p>
                    <p class="project-case-text">Firma:</p>
                    <p class="project-case-text"></p>

                    <span></span>

                    <div>
                        <h2 class="project-case-text">Sag-nr @Model.DataBaseInfo.CaseName</h2>
                        <h2 class="">@Model.DataBaseInfo.Address</h2>
                    </div>
                    <div>
                        <h2 class="">@Model.DataBaseInfo.User.Installer.Department</h2>
                        <h2 class="">@Model.DataBaseInfo.User.Installer.Installer1</h2>
                    </div>
                    <div>

                    </div>
                        <button id="submitButton" onclick="submitForm()" class="read-more-button">Opdater Sag</button>
                </div>
            </div>
        

            <div class="full-size">
                <h2>Sags info</h2>
                <div class="content-grid">
                    <div class="">
                        <form method="post" id="submitUpdateSpecific">
                           


                            <div class="info-section">
                                @if (Model.DataBaseInfo.CaseName == null)
                                {
                                    <label>Sags navn:</label>
                                    <input asp-for="@Model.CaseName" />
                                }
                            </div>
                            <div class="info-section">
                                @if (Model.DataBaseInfo.StartDate == null)
                                {
                                    <label>Start Dato:</label>
                                    <input value="none" type="datetime-local" asp-for="@Model.StartDate" />
                                }
                                @if (Model.DataBaseInfo.Followup == null)
                                {
                                    <label>Followup Dato:</label>
                                    <input value="none" type="datetime-local" asp-for="@Model.Followup" />
                                }
                                @if (Model.DataBaseInfo.Deadline == null)
                                {
                                    <label>Dead line:</label>
                                    <input value="none" type="datetime-local" asp-for="@Model.Deadline" />
                                }
                            </div>
                            <div class="info-section">
                                @if (Model.DataBaseInfo.Assembly.Slope == null)
                                {
                                    <label>Hældning:</label>
                                    <input type="number" value="null" asp-for="@Model.Slope" />
                                }
                                @if (Model.DataBaseInfo.Assembly.BuildingHeight == null)
                                {
                                    <label>Højde på bygning i meter:</label>
                                    <input type="number" value="null" asp-for="@Model.BuildingHeight" />
                                }
                            </div>
                            <div class="info-section">
                                @if (Model.DataBaseInfo.BatteryRequest.Capacity <= 0 && Model.DataBaseInfo.Battery.BatteryPrepare == true)
                                {
                                    <label>Størrelse i kWh:</label>
                                    <input type="number" value="null" asp-for="@Model.BatteryCapacity " />
                                }
                            </div>
                            
                            @if (Model.DataBaseInfo.DimensioningId == null)
                            {
                            <div class="info-section">
                                    @foreach (var Dem in Model.Dimensions)
                                    {
                                        <div class="form-group-dates">
                                            <label>@Dem.Description</label>
                                            <label>
                                                <input asp-for="@Model.DimensioningId" value="@Dem.Id" type="radio">
                                                <span>Ja</span>
                                            </label>
                                        </div>
                                    }
                            </div>
                            }
                            @if (Model.DataBaseInfo.DimensioningId == 1)
                            {
                                <div class="info-section">
                                    @if (Model.DataBaseInfo.DimensioningConsumption.CategoryId == null)
                                    {
                                        <label>Anlægskategori:</label>

                                        <select asp-for="@Model.CategoryId">
                                            <option selected disabled hidden>Vælg</option>
                                            @foreach (var cats in Model.ConsCats)
                                            {
                                                <option value="@cats.Id">@cats.Category</option>
                                            }
                                        </select>
                                    }

                                    @if (Model.DataBaseInfo.DimensioningConsumption.CurrentConsumption == null)
                                    {
                                        <label>Nuværende forbrug i kWh:</label>
                                        <input type="number" value="null" asp-for="@Model.CurrentConsumption" />
                                    }
                                    @if (Model.DataBaseInfo.DimensioningConsumption.HouseSize == null ||
                                        Model.DataBaseInfo.DimensioningConsumption.HouseSize <= 0)
                                    {
                                        <label>Størrelse hus i m2:</label>
                                        <input type="number" value="null" asp-for="@Model.HouseSize " />
                                    }
                                    @if ((Model.DataBaseInfo.DimensioningConsumption.EvKilometer == null || Model.DataBaseInfo.DimensioningConsumption.EvKilometer <= 0) && Model.DataBaseInfo.DimensioningConsumption.ElectricVehicle == true)
                                    {
                                        <label>Hvor mange km køres pr. år:</label>
                                        <input type="number" value="null" asp-for="@Model.EvKilometer " />
                                    }
                                </div>
                            }
                            @if (Model.DataBaseInfo.DimensioningId == 3 && (Model.DataBaseInfo.DimensioningkWp.KiloWattPeak == null || Model.DataBaseInfo.DimensioningkWp.KiloWattPeak <= 0))
                            {
                                <div class="info-section">
                                    <label>
                                        Ønsket dimensionering i kWp:
                                    </label>
                                    <input type="number" value="null" asp-for="@Model.KiloWattPeak" />
                                </div>
                            }

                        </form>
                    </div>
                </div>

            </div>

        </div>
    </section>
</main>

<script>
    function submitForm() {
        document.querySelector("#submitUpdateSpecific").submit();
    }
</script>